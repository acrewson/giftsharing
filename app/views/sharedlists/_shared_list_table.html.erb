  <div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
  <% if @shared_items.present? %>
    <div class="padding_bottom">
      <table class="table table-striped table-bordered table_hover">
        <thead class="blue_white_table_header">
          <tr>
            <th>Item Requested</th>
            <th>Request Type</th>
            <th class="center_text">Quantity Requested</th>
            <th class="center_text">Quantity Needed</th>
            <th class="center_text">Claim this item!</th>
          </tr>
        </thead>
        <tbody>
          <% @shared_items.each do |i| %>
            <tr>
                  <td style="vertical-align: middle;"><a target="_blank" href="<%= i.url %>"><%= i.description %></a></td>
                  <td style="vertical-align: middle;"><%= i.request_type.request_type_description %></td>
                  <td style="vertical-align: middle;" width="100" class="center_text"><%= i.quantity_requested %></td>
                  <td style="vertical-align: middle;" width="100" class="center_text"><%= [0, i.quantity_requested - i.purchases.count].max %></td>

              <% if [0, i.quantity_requested - i.purchases.count].max > 0 %>
                <form action="/sharedlists/<%= @selected_list.id %>/item/<%= i.id %>">
                  <td style="vertical-align: middle;" width="200">
                    <div class="col-xs-6">
                      <input class="form-control" name = "q_claimed" type="integer" placeholder="1">
                    </div>
                    <div class="col-xs-6">
                      <button class="btn btn-sm btn-primary btn-block" type="submit">Claim</button>
                    </div>
                  </td>
                </form>
              <% else %>
                  <td class="center_text"><i>Item fulfilled</i></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="padding_bottom">
      <p>There are currently no items on this list</p>
    </div>
  <% end %>
</div>
<div class="col-md-1"></div>
</div>
