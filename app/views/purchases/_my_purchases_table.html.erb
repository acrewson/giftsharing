
<% if @current_user.purchases.present? %>
  <div class="padding_bottom">
    <table class="table table-striped table-bordered">
      <thead class="blue_white_table_header">
        <tr>
          <th>Recipient</th>
          <th>List Name</th>
          <th>Event Date</th>
          <th>Item</th>
          <th class="center_text">Quantity Purchased</th>
        </tr>
      </thead>
      <tbody>
        <% @current_user.purchases.each do |p| %>
          <tr>
            <td><%= p.item.list.user.firstname + " " + p.item.list.user.lastname%></td>
            <td><a href="/sharedlists/<%= p.item.list.id %>/contents"><%= p.item.list.listname %></a></td>
            <td><%= p.item.list.eventdate.strftime("%B %d, %Y") %></td>
            <td><a target="_blank" href="<%= p.item.url %>"><%= p.item.description %></a></td>
            <td class="center_text" width="80"><%= p.quantity_purchased %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title">My purchases</h4>
    </div>
    <div class="panel-body">
      <div class="padding_bottom">
        <p>You don't have any purchases yet. View lists shared with you to get going!</p>
      </div>
    </div>
  </div>
<% end %>
