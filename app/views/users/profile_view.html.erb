<div class="jumbotron">
  <div class="h2_update"><%= @current_user.firstname %>'s profile</div>
</div>

<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="padding_bottom">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="blue_white_table_header">
            <th width="150">Basic Info</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr><td>First Name</td>
              <td>
                <% if @current_user.firstname.present? %>
                  <%= @current_user.firstname %>
                <% end %>
              </td>
            </tr>
            <tr><td>Last Name</td>
              <td>
                <% if @current_user.lastname.present? %>
                  <%= @current_user.lastname %>
                <% end %>
              </td>
            </tr>
            <tr><td>Birthday</td>
              <td>
                <% if @current_user.birthdate.present? %>
                  <%= @current_user.birthdate.strftime("%B %d, %Y") %>
                <% end %>
              </td>
            </tr>
            <tr><td>Street Address</td>
              <td>
                <% if @current_user.address.present? %>
                  <%= @current_user.address %>
                <% end %>
              </td>
            </tr>
            <tr><td>City</td>
              <td>
                <% if @current_user.city.present? %>
                  <%= @current_user.city %>
                <% end %>
              </td>
            </tr>
            <tr><td>State</td>
              <td>
                <% if @current_user.state.present? %>
                  <%= @current_user.state.state_abbrev %>
                <% end %>
              </td>
            </tr>
            <tr><td>Zip Code</td>
              <td>
                <% if @current_user.zip.present? %>
                  <%= @current_user.zip %>
                <% end %>
              </td>
            </tr>
            <tr><td>Gender</td>
              <td>
                <% if @current_user.gender.present? %>
                  <%= @current_user.gender.gender_name %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <a class="btn btn-lg btn-success" href="/myprofile/edit">Edit Profile</a>
</div>
<div class="col-md-3"></div>
