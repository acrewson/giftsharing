<div class="jumbotron">
  <div class="h2_update"><%= @current_user.firstname %>'s profile</div>
</div>

<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="padding_bottom">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="blue_white_table_header">
            <th width="150">Basic Info</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr><td>First Name</td><td><%= @current_user.firstname %></td></tr>
            <tr><td>Last Name</td><td><%= @current_user.lastname %></td></tr>
            <tr><td>Birthday</td><td><%= @current_user.birthdate.strftime("%B %d, %Y") %></td></tr>
            <tr><td>Street Address</td><td><%= @current_user.address %></td></tr>
            <tr><td>City</td><td><%= @current_user.city %></td></tr>
            <tr><td>State</td><td><%= @current_user.state.state_abbrev %></td></tr>
            <tr><td>Zip Code</td><td><%= @current_user.zip %></td></tr>
            <tr><td>Gender</td><td><%= @current_user.gender.gender_name %></td></tr>
        </tbody>
      </table>
    </div>
    <a class="btn btn-lg btn-success" href="/myprofile/edit">Edit Profile</a>
</div>
<div class="col-md-3"></div>
