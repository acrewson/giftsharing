
  <h4>Your current connections...</h4>
  <div class="padding_bottom">
    <table class="table table-striped table-bordered">
      <thead class="blue_white_table_header">
        <tr>

          <th>Connection Name</th>
          <th>Relation ( <span><a href="/connections/edit"><i class="fa fa-pencil text_color_white"></i></a></span> )</th>
        </tr>
      </thead>
      <tbody>
        <% @my_connections.each do |connection| %>
          <tr>
            <td><%= connection.firstname + " " + connection.lastname %></td>
            <td><%= ConnectionType.find_by(id: connection.connection_type_id).connection_description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

