  <div class="jumbotron">
    <div class="h2_update">Welcome, <%= @current_user.firstname %>! Here are your connections.</div>
  </div>


  <div class = "row">
    <div class="col-md-6">
      <h4>Your current connections...</h4>
      <div class="padding_bottom">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Connection Name</th>
              <th>Relation</th>
            </tr>
          </thead>
          <tbody>
            <% @my_connections.each do |connection| %>
              <tr>
                <td><%= connection.firstname + " " + connection.lastname %></td>
                <td><%= ConnectionType.find_by(id: connection.connection_type_id).connection_description %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-6">
      <div class="padding_bottom">
        <h4>Pending Invitations...</h4>
      </div>
      <div class="padding_bottom">
        <h4>Invite more people to connect!</h4>
      </div>
    </div>
  </div>
