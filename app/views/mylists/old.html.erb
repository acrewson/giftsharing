
  <div class="jumbotron">
    <div class="h2_update">Welcome, <%= @current_user.firstname %>! Here are your gift lists.</div>
  </div>

<div class="col-md-2"> </div>
<div class="col-md-8">
  <% if @old_shared_lists.present? %>
    <h4>Past lists shared with you...</h4>
    <div class="padding_bottom">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="blue_white_table_header">
            <th>Shared By</th>
            <th>List Name</th>
            <th>Event Date</th>
          </tr>
        </thead>
        <tbody>
          <% @old_shared_lists.each do |sharedlist| %>
            <tr>
              <td><%= sharedlist.user.firstname + " " + sharedlist.user.lastname %> </td>
              <td><a href="/sharedlists/<%= sharedlist.id %>/contents"><%= sharedlist.listname %></a></td>
              <td><%= sharedlist.eventdate.strftime("%B %d, %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h4 class="panel-title">Shared Lists</h4>
      </div>
      <div class="panel-body">
        <div class="padding_bottom">
          <p>None to look at!</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-2"> </div>
