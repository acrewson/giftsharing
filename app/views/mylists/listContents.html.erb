  <div class="jumbotron">
    <div class="h2_update"><%= @selected_list.listname %></div>
  </div>

  <div class = "row">
    <div class="col-md-9">
      <% if @myitems.present? %>
        <table class="table table-striped table-bordered table_hover">
          <thead>
            <tr>
              <th>Item Requested</th>
              <th class="center_text">Quantity Requested</th>
              <th>Request Type</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @myitems.each do |i| %>
              <tr>
                <td><a target="_blank" href="<%= i.url %>"><%= i.description %></a></td>
                <td class="center_text" width="100"><%= i.quantity_requested %></td>
                <td><%= i.request_type.request_type_description %></td>
                <td><a href="/mylists/<%= @selected_list.id %>/contents/delete/<%= i.id %>">Delete</a></td>
              </tr>
              <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="padding_bottom">
          <p>There are currently no items on this list. Add one below to get started!</p>
        </div>
      <% end %>


      <!-- Add a form to allow users to add new items -->
      <h4>Add a new item to your list:</h4>
      <form action="/mylists/<%= @selected_list.id %>/contents/add">
      <div class="form-group">
        <label for="description">Description</label>
        <input name = "description" type="text" class="form-control" id="description" placeholder="Red sweater">
      </div>
      <div class="form-group">
        <label for="quantity">Quantity Requested</label>
        <input name = "quantity" type="text" class="form-control" id="quantity" placeholder="1">
      </div>
      <div class="form-group">
        <label for="request_type">Request Type</label>
        <select name="requst_type" id="request_type">
          <% RequestType.all.each do |rt| %>
            <option value="<%= rt.id %>"><%= rt.request_type_description %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="url">Web Address of Item</label>
        <input name = "url" type="text" class="form-control" id="url" placeholder="Copy link to item here...">
      </div>
      <div class="form-group">
        <label for="comments">Additional Details</label>
        <textarea name = "comments" type="text" class="form-control" id="comments" placeholder="Enter additional information about your item here. E.g. Why you want it, what you'll use it for, etc."></textarea>
      </div>
      <input type="submit" class="btn btn-lg btn-success" value="Add item!">
      </form>
    </div>
    <div class="col-md-3">

      <div class="row">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h4 class="panel-title">This list is shared with:</h4>
          </div>
          <div class="panel-body">
            <form action="/mylists/<%= @selected_list.id %>/list_access/remove">
            <div class="padding_bottom">
              <table>
                <thead></thead>
                <tbody>
                  <% @shared_users.each do |shared_user| %>
                  <tr>
                  <td>
                    <span class="padding_right_20"><input type="checkbox" name="remove<%= shared_user.id %>" value="true"></span>
                    <%= shared_user.firstname + " " + shared_user.lastname %>
                  </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <input type="submit" class="btn btn-md btn-danger" value="Remove access">
            </form>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h4 class="panel-title">Share this list with others:</h4>
          </div>
          <div class="panel-body">
            <form action="/mylists/<%= @selected_list.id %>/list_access/add">
            <div class="padding_bottom">
            <table>
              <thead></thead>
                <tbody>
                  <% @potential_users.each do |potential_share| %>
                  <tr>
                  <td>
                    <span class="padding_right_20"><input type="checkbox" name="add<%= potential_share.id %>" value="true"></span>
                    <%= potential_share.firstname + " " + potential_share.lastname %>
                  </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <input type="submit" class="btn btn-md btn-success" value="Grant access">
            </form>
          </div>
        </div>
      </div>




    </div>
  </div>


