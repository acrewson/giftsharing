<% if @mylists.present? %>
  <h4>My current lists...</h4>
  <div class="padding_bottom">
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="blue_white_table_header">
          <th></th>
          <th>List Name</th>
          <th>Event Date</th>
        </tr>
      </thead>
      <tbody>
        <% @mylists.each do |mylist| %>
          <tr>
            <td class="center_text" width="80">
            <span class="padding_right_10"><a href="/mylists/<%= mylist.id %>/delete"><i class="fa fa-trash-o text_color_black"></i></a></span>
            <span><a href="/mylists/<%= mylist.id %>/edit"><i class="fa fa-pencil text_color_black"></i></a></span>
            </td>
            <td><a href="/mylists/<%= mylist.id %>/contents"><%= mylist.listname %></a></td>
            <td><%= mylist.eventdate.strftime("%B %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title">My lists</h4>
    </div>
    <div class="panel-body">
      <div class="padding_bottom">
        <p>You don't have any lists. Make one to get started!</p>
      </div>
    </div>
  </div>
<% end %>
