<h4>Update your list</h4>
<form action="/mylists/<%= @selected_list.id %>/update">
  <div class="form-group">
    <label for="listname">List Name</label>
    <input name = "listname" type="text" class="form-control" id="listname"
      <% if @selected_list.listname.present? %>
        value="<%= @selected_list.listname %>"
      <% else %>
        placeholder="<%= @current_user.firstname %>'s Birthday List 2014"
      <% end %>
    >
  </div>
  <div class="form-group">
    <label for="listtype">List Type</label>
    <select name="listtype">
      <% Listtype.all.each do |lt|  %>
        <% if lt.id == @selected_list.listtype_id %>
          <option selected="selected" value="<%= lt.id %>"><%= lt.listtype %></option>
        <% else %>
          <option value="<%= lt.id %>"><%= lt.listtype %></option>
        <% end %>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="eventdate">Event Date</label>
    <input name = "eventdate" type="text" class="form-control" id="eventdate"
      <% if @selected_list.eventdate.present? %>
      <% cur_month = "0" + @selected_list.eventdate.month.to_s %>
      <% cur_day = "0" + @selected_list.eventdate.day.to_s %>
      <% cur_year = @selected_list.eventdate.year.to_s %>
        value=" <%= cur_month[cur_month.length-2,2] + "/" + cur_day[cur_day.length-2,2] + "/" + cur_year %>"
      <% else %>
        placeholder="MM/DD/YYYY"
      <% end %>
    >
  </div>
  <input type="submit" class="btn btn-lg btn-success" value="Update">
</form>

