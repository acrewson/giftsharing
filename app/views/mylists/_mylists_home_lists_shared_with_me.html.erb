
<% if @lists_shared_with_me.present? %>
  <h4>Lists shared with you...</h4>
  <div class="padding_bottom">
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="blue_white_table_header">
          <th>Shared By</th>
          <th>List Name</th>
          <th>Event Date</th>
        </tr>
      </thead>
      <tbody>
        <% @lists_shared_with_me.each do |sharedlist| %>
          <tr>
            <td><%= sharedlist.user.firstname + " " + sharedlist.user.lastname %> </td>
            <td><a href="/sharedlists/<%= sharedlist.id %>/contents"><%= sharedlist.listname %></a></td>
            <td><%= sharedlist.eventdate.strftime("%B %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4 class="panel-title">Shared Lists</h4>
    </div>
    <div class="panel-body">
      <div class="padding_bottom">
        <p>None of your connections have shared a list with you yet.</p>
      </div>
    </div>
  </div>
<% end %>

<% if @old_shared_lists.present? %>
  <p>Click here for <a href="/mylists/old">old lists</a> shared with you</p>
<% end %>
