<div class="jumbotron">
  <div class="h2_update">Edit your profile below</div>
</div>

<div class="col-md-3"></div>
<div class="col-md-6">
  <form action="/myprofile/update">
    <div class="padding_bottom">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="blue_white_table_header">
            <th width="150">Basic Info</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td style="vertical-align: middle;">First Name</td>
              <td style="vertical-align: middle;">
                <input name = "firstname" type="text" class="form-control" required
                  <% if @current_user.firstname.present? %>
                    value="<%= @current_user.firstname %>"
                  <% else %>
                    placeholder="John"
                  <% end %>
                >
              </td>
            </tr>
            <tr>
              <td style="vertical-align: middle;">Last Name</td>
              <td style="vertical-align: middle;">
                <input name = "lastname" type="text" class="form-control" required
                  <% if @current_user.lastname.present? %>
                    value="<%= @current_user.lastname %>"
                  <% else %>
                    placeholder="Doe"
                  <% end %>
                >
              </td>
            </tr>
            <tr>
              <td style="vertical-align: middle;">Birthday</td>
              <td style="vertical-align: middle;">
                <input name = "birthdate" type="text" class="form-control" required
                  <% if @current_user.birthdate.present? %>
                    <% cur_month = "0" + @current_user.birthdate.month.to_s %>
                    <% cur_day = "0" + @current_user.birthdate.day.to_s %>
                    <% cur_year = @current_user.birthdate.year.to_s %>
                    value="<%= cur_month[cur_month.length-2,2] + "/" + cur_day[cur_day.length-2,2] + "/" + cur_year %>"
                  <% else %>
                    placeholder="06/20/1981"
                  <% end %>
                >
              </td>
            </tr>
            <!-- <%= render 'address_edit_form' %> -->
            <tr>
              <td>Gender</td>
              <td>
                <select name="gender" id="gender" required>
                  <% if @current_user.gender_id.nil? %>
                    <option selected="selected" value=""></option>
                  <% end %>
                  <% Gender.all.each do |g| %>
                    <% if g.id == @current_user.gender_id %>
                      <option selected="selected" value="<%= g.id %>"><%= g.gender_name %></option>
                    <% else %>
                      <option value="<%= g.id %>"><%= g.gender_name %></option>
                    <% end %>
                  <% end %>
                </select>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <input type="submit" class="btn btn-lg btn-success" value="Update Profile">
  </form>
</div>
<div class="col-md-3"></div>
