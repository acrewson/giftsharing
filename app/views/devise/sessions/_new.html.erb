<h2 class="form-signin-heading center_text">Please sign in</h2>

<%= form_for(:user, url: session_path(:user)) do |f| %>
  <div class="padding_bottom_10">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: true %>
  </div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %></div>

  <% if Devise.mappings[:user].rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"%></div>
<% end %>

<%= render "devise/shared/links" %>
